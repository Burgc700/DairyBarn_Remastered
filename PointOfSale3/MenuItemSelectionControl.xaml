<UserControl x:Class="DairyBarn.PointOfSale.MainItemSelectionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DairyBarn.PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="475">

    <UserControl.Resources>
        <Style TargetType="Button">
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="15"/>
                </Style>
            </Style.Resources>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <TextBlock Name="burgerLabel" Grid.Column="0" Grid.Row="0" Text="Burger" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Name="iceCreamLabel" Grid.Column="1" Grid.Row="0" Text="Ice Cream" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Name="drinksLabel" Grid.Column="2" Grid.Row="0" Text="Drinks" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <Button x:Name="bYOBurger" Grid.Column="0" Grid.Row="1" Content="Build-Your-Own Burger" Click="MenuItemClick"/>
        <Button x:Name="classicCheeseburger" Grid.Column="0" Grid.Row="2" Content="Classic Cheeseburger" Click="MenuItemClick"/>
        <Button x:Name="bBQBaconCheeseburger" Grid.Column="0" Grid.Row="3" Click="MenuItemClick" Content="BBQ Bacon Cheeseburger"/>
        <Button x:Name="mushroomSwissBurger" Grid.Column="0" Grid.Row="4" Click="MenuItemClick" Content="Mushroom Swiss Burger"/>
        <Button x:Name="veggieBurger" Grid.Column="0" Grid.Row="5" Click="MenuItemClick" Content="Veggie Burger"/>

        <Button x:Name="classicSundae" Grid.Column="1" Grid.Row="1" Click="MenuItemClick" Content="Classic Sundae"/>
        <Button x:Name="iceCreamCone" Grid.Column="1" Grid.Row="2" Click="MenuItemClick" Content="Ice Cream Cone"/>
        <Button x:Name="brownieSundae" Grid.Column="1" Grid.Row="3" Click="MenuItemClick" Content="Brownie Sundae"/>
        <Button x:Name="strawberryShortcake" Grid.Column="1" Grid.Row="4" Click="MenuItemClick" Content="Strawberry Shortcake"/>
        <Button x:Name="winterSwirl" Grid.Column="1" Grid.Row="5" Click="MenuItemClick" Content="Winter Swirl"/>

        <Button x:Name="coffee" Grid.Column="2" Grid.Row="1" Click="MenuItemClick" Content="Coffee"/>
        <Button x:Name="latte" Grid.Column="2" Grid.Row="2" Click="MenuItemClick" Content="Latte"/>
        <Button x:Name="mocha" Grid.Column="2" Grid.Row="3" Click="MenuItemClick" Content="Mocha"/>

    </Grid>
</UserControl>
