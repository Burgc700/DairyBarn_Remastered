<UserControl x:Class="DairyBarn.PointOfSale.WinterSwirlControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DairyBarn.PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height=".50*"/>
            <RowDefinition Height=".50*"/>
        </Grid.RowDefinitions>

        <local:BasicInfoControl Grid.Row="0"/>
        <StackPanel Grid.Row="1" Margin="10">
            <TextBlock VerticalAlignment="Center" FontSize="15">Mix In Option: </TextBlock>
            <ComboBox Grid.Row="1" ItemsSource="{Binding MixInOptions}" SelectedItem="{Binding MixInChoice}" Height="50" Width="200" FontSize="15" FontStretch="Expanded"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Margin="10">
            <TextBlock VerticalAlignment="Center" FontSize="15">Type of Sauce: </TextBlock>
            <ComboBox ItemsSource="{Binding SauceOptions}" SelectedItem="{Binding SauceChoice}" Height="50" Width="200" FontSize="15" FontStretch="Expanded"/>
        </StackPanel>
    </Grid>
</UserControl>
