<UserControl x:Class="DairyBarn.PointOfSale.ClassicSundaeCustControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DairyBarn.PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height=".75*"/>
        </Grid.RowDefinitions>

        <local:BasicInfoControl Grid.Row="0"/>

        <StackPanel Grid.Row="1" Margin="10">
            <TextBlock VerticalAlignment="Center" FontSize="15">Number of Scoops: </TextBlock>
            <local:CountBox Count="{Binding Scoops, Mode=TwoWay}" Height="50" Width="200" FontSize="30"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Margin="10">
            <TextBlock VerticalAlignment="Center" FontSize="15">Type of Sauce: </TextBlock>
            <ComboBox ItemsSource="{Binding SauceOptions}" SelectedItem="{Binding SauceChoice}" Height="50" Width="200" FontSize="15" FontStretch="Expanded"/>
        </StackPanel>
        
        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="10">
            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBlock Text="Peanuts " FontSize="15"/>
                <CheckBox IsChecked="{Binding Peanuts}" FontSize="15"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBlock Text="Cherry " FontSize="15"/>
                <CheckBox IsChecked="{Binding Cherry}" FontSize="15"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBlock Text="Whipped Cream " FontSize="15"/>
                <CheckBox IsChecked="{Binding WhippedCream}" FontSize="15"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
