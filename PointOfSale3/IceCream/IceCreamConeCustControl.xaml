<UserControl x:Class="DairyBarn.PointOfSale.IceCreamConeCustControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DairyBarn.PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height=".5*"/>
        </Grid.RowDefinitions>

        <local:BasicInfoControl Grid.Row="0"/>
        <StackPanel Grid.Row="1" Margin="10">
            <TextBlock VerticalAlignment="Center" FontSize="15">Number of Scoops: </TextBlock>
            <local:CountBox Grid.Row="1" Count="{Binding Path=Scoops, Mode=TwoWay}" Height="50" Width="200" FontSize="30"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Margin="10">
            <TextBlock VerticalAlignment="Center" FontSize="15">Type of Cone: </TextBlock>
            <ComboBox Grid.Row="2" ItemsSource="{Binding Source={StaticResource coneType}}" SelectedItem="{Binding TypeOfCone}" Height="50" Width="250" FontSize="30" FontStretch="Expanded"/>
        </StackPanel>
        
        <StackPanel Grid.Row="3" Margin="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Dipped " FontSize="15"/>
                <CheckBox IsChecked="{Binding Dipped}" FontSize="15"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
