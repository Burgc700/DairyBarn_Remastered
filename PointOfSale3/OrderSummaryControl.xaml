<UserControl x:Class="DairyBarn.PointOfSale.OrderSummaryControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DairyBarn.PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="250">
    
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Margin="5">
            <TextBlock DockPanel.Dock="Top" x:Name="ordeNumber" Text="Order number: 1"/>
            <TextBlock x:Name="otherInfo" Text="Placed at: 3/4/2025 6:15 PM"/>
        </StackPanel>
        
        <ListView x:Name="orderHistory" ItemsSource="{Binding}" DockPanel.Dock="Top" Height="400" Margin="5" ScrollViewer.CanContentScroll="False">

        </ListView>

        <StackPanel DockPanel.Dock="Bottom" Margin="5">
            <TextBlock x:Name="subtotal" Text="Subtotal: XXX" DockPanel.Dock="Bottom"/>
            <TextBlock x:Name="tax" Text="Tax: XXX" DockPanel.Dock="Bottom"/>
            <TextBlock x:Name="total" DockPanel.Dock="Bottom" Text="Total: XXX"/>
        </StackPanel>
        
    </DockPanel>
    
</UserControl>
