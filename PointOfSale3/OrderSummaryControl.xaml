<UserControl x:Class="DairyBarn.PointOfSale.OrderSummaryControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DairyBarn.PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="250">
    
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Margin="5" Orientation="Horizontal">
            <TextBlock Text="Order: "/>
            <TextBlock DockPanel.Dock="Top" Text="{Binding Path=OrderNumber}"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="5">
            <TextBlock Text="{Binding Path=PlacedAt, StringFormat='Date: {0}'}"/>
        </StackPanel>
        
        <ListView x:Name="orderHistory" ItemsSource="{Binding}" DockPanel.Dock="Top" Height="375" Margin="5" ScrollViewer.CanContentScroll="False" HorizontalContentAlignment="Stretch">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <DockPanel>
                            <TextBlock x:Name="itemPrice" DockPanel.Dock="Right" Text="{Binding Price, StringFormat='{}{0:C}'}"/>
                            <TextBlock x:Name="itemName" DockPanel.Dock="Left" Text="{Binding Path=Name}"/>
                        </DockPanel>
                        <ListView x:Name="prepInfo" ItemsSource="{Binding Path=PreparationInformation}"/>
                        <Button Click="RemoveClick">Remove</Button>
                        <Button Click="EditClick">Edit</Button>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <StackPanel Margin="5" Orientation="Horizontal" DockPanel.Dock="Bottom">
            <TextBlock Text="Total: "/>
            <TextBlock Text="{Binding Path=Total, StringFormat='{}{0:C}'}"/>
        </StackPanel>

        <StackPanel Margin="5" Orientation="Horizontal" DockPanel.Dock="Bottom">
            <TextBlock Text="Tax: "/>
            <TextBlock Text="{Binding Path=Tax, StringFormat='{}{0:C}'}"/>
        </StackPanel>

        <StackPanel Margin="5" Orientation="Horizontal" DockPanel.Dock="Bottom">
            <TextBlock Text="Subtotal: "/>
            <TextBlock Text="{Binding Path=Subtotal, StringFormat='{}{0:C}'}"/>
        </StackPanel>
        
    </DockPanel>
    
</UserControl>
