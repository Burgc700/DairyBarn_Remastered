<UserControl x:Class="DairyBarn.PointOfSale.CountBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DairyBarn.PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="80">
    <Grid MinWidth="80">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Button Click="HandleDecrement" Grid.Column="0">-</Button>
        <TextBlock Text="{Binding Path=Count, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:CountBox}}" Grid.Column="1" TextAlignment="Center"/>
        <Button Click="HandleIncrement" Grid.Column="2">+</Button>
    </Grid>
</UserControl>
