<UserControl x:Class="DairyBarn.PointOfSale.BurgerCustControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DairyBarn.PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="burgerControl">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height=".5*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width=".50*"/>
        </Grid.ColumnDefinitions>

        <local:BasicInfoControl Grid.Row="0" Grid.Column="0"/>
        
        <StackPanel Grid.Row="1" Grid.Column="0" Margin="10">
            <TextBlock VerticalAlignment="Center" FontSize="15">Number of Patties: </TextBlock>
            <local:CountBox Count="{Binding Path=Patties, Mode=TwoWay}" FontSize="30" Width="200"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Grid.Column="0" Margin="10">
            <TextBlock VerticalAlignment="Center" FontSize="15">Type of Cheese: </TextBlock>
            <ComboBox ItemsSource="{Binding CheeseOptions}" SelectedItem="{Binding CheeseChoice}" FontSize="20" FontStretch="Expanded" Width="250"/>
        </StackPanel>
        
        <StackPanel Grid.Row="3" Grid.Column="0" Margin="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Veggie Patties " FontSize="15"/>
                <CheckBox IsChecked="{Binding Veggie}" FontSize="15" />
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Column="1" Grid.Row="0" x:Name="ingredients" Grid.RowSpan="2" VerticalAlignment="Center"/>

        <Button x:Name="pickTwoButton" Grid.Column="1" Grid.Row="2" Margin="10" Click="PickTwoClick">Pick Two</Button>
    </Grid>
</UserControl>
