<UserControl x:Class="DairyBarn.PointOfSale.BurgerCustControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DairyBarn.PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height=".5*"/>
        </Grid.RowDefinitions>

        <local:BasicInfoControl Grid.Row="0"/>
        
        <StackPanel Grid.Row="1" Margin="10">
            <TextBlock VerticalAlignment="Center" FontSize="15">Number of Patties: </TextBlock>
            <local:CountBox Count="{Binding Path=Patties, Mode=TwoWay}" Height="50" Width="200" FontSize="30"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Margin="10">
            <TextBlock VerticalAlignment="Center" FontSize="15">Type of Cheese: </TextBlock>
            <ComboBox ItemsSource="{Binding CheeseOptions}" SelectedItem="{Binding CheeseChoice}" Height="50" Width="200" FontSize="30" FontStretch="Expanded"/>
        </StackPanel>
        
        <StackPanel Grid.Row="3" Margin="10">
            <StackPanel Orientation="Horizontal">
                <TextBox Text="Veggie Patties " FontSize="15"/>
                <CheckBox IsChecked="{Binding Veggie}" FontSize="15" />
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
